<Window x:Class="VH_Tools.Views.DaglichtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VH Daglichttool"
        Height="1000"
        Width="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Brand Colors -->
        <Color x:Key="BrandGoldColor">#B2996B</Color>
        <Color x:Key="BrandGoldDarkColor">#8E7A55</Color>

        <SolidColorBrush x:Key="BrandGold" Color="{StaticResource BrandGoldColor}"/>
        <SolidColorBrush x:Key="BrandGoldDark" Color="{StaticResource BrandGoldDarkColor}"/>
        <SolidColorBrush x:Key="BgLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BgGray" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextGray" Color="#475569"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>

        <!-- GroupBox Style (matching ViewDuplicator) -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="White" 
                                BorderBrush="{StaticResource BrandGold}" 
                                BorderThickness="1.5" 
                                CornerRadius="8" 
                                Padding="20">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" 
                                         Margin="2,0,0,12" 
                                         FontWeight="Bold" 
                                         FontSize="13"
                                         Foreground="{StaticResource TextDark}" 
                                         Text="{TemplateBinding Header}"/>
                                <ContentPresenter Margin="0"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="FloatingGoldButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrandGold}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BrandGoldDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FloatingCancelButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form Styles -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.15" Color="#0F172A"/>
            </Border.Effect>

            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="White" CornerRadius="20,20,0,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                    <Grid Height="70">
                        <TextBlock Text="Daglicht Berekening" 
                                 FontSize="22" 
                                 FontWeight="SemiBold" 
                                 Foreground="{StaticResource TextDark}" 
                                 VerticalAlignment="Center" 
                                 Margin="30,0"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,0" Background="Transparent">
                    <StackPanel Margin="30,20,30,80">
                        
                        <!-- SELECTIE GroupBox -->
                        <GroupBox Header="SELECTIE">
                            <StackPanel>
                                <RadioButton x:Name="rbActiveView" Content="Kozijnen in actieve view" IsChecked="True"/>
                                <RadioButton x:Name="rbCurrentLevel" Content="Kozijnen op huidig level"/>
                                <RadioButton x:Name="rbSelection" Content="Alleen huidige selectie"/>
                                <RadioButton x:Name="rbAllModel" Content="Alle kozijnen in model"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- OPTIES GroupBox -->
                        <GroupBox Header="OPTIES">
                            <StackPanel>
                                <CheckBox x:Name="cbDrawLines" Content="Lijnen tekenen (waaier + β- en X/A-lijnen)" IsChecked="True"/>
                                <CheckBox x:Name="cbFlipAlphaFan" Content="Waaier omdraaien" IsChecked="False"/>
                                <CheckBox x:Name="cbDoAlpha" Content="α berekenen" IsChecked="True"/>
                                <CheckBox x:Name="cbDoBeta" Content="β berekenen" IsChecked="True"/>
                                <CheckBox x:Name="cbDoGlass" Content="Glasoppervlakte berekenen" IsChecked="True"/>
                                <CheckBox x:Name="cbOnlyVG" Content="Alleen kozijnen bij VG-gebieden (Areas)"/>
                                <CheckBox x:Name="cbDoExport" Content="Resultaten exporteren naar CSV" IsChecked="True"/>
                                
                                <Separator Background="{StaticResource BorderColor}" Margin="0,15,0,15"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Standaard Raamhout (mm):" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" FontSize="13"/>
                                    <TextBox x:Name="tbSashWidth" Grid.Column="1" Width="70" Text="69" FontSize="13"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Standaard Kozijnhout (mm):" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" FontSize="13"/>
                                    <TextBox x:Name="tbFrameHeight" Grid.Column="1" Width="70" Text="67" FontSize="13"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Standaard Glas-offset (mm):" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" FontSize="13"/>
                                    <TextBox x:Name="tbGlassOffset" Grid.Column="1" Width="70" Text="11" FontSize="13"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Floating Action Buttons (Outside white container, right-aligned) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,25">
            <Button x:Name="btnCancel" 
                    Content="Annuleren" 
                    Style="{StaticResource FloatingCancelButton}"
                    Click="BtnCancel_Click"
                    Margin="0,0,15,0">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#0F172A"/>
                </Button.Effect>
            </Button>
            
            <Button x:Name="btnRun" 
                    Content="Berekenen" 
                    Style="{StaticResource FloatingGoldButton}"
                    Click="BtnRun_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="{StaticResource BrandGoldDarkColor}"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
